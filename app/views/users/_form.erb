<%= form_for @user, html: {class: 'form-container'} do |f| %>
  <%= f.label :username, class: 'form-title' %>
  <%= f.text_field :username, class: 'form-field' %><br/>

  <%= f.label :password , class: 'form-title' %>
  <%= f.password_field :password , class: 'form-field' %><br/>

  <%= f.label :name , class: 'form-title' %>
  <%= f.text_field :name , class: 'form-field'  %><br/>

  <%= f.label :phone , class: 'form-title' %>
  <%= f.text_field :phone , class: 'form-field'  %><br/>

  <%= f.label :email , class: 'form-title' %>
  <%= f.text_field :email , class: 'form-field'  %><br/>

  <%= f.label :zip, class: 'form-title'%>
  <%= f.text_field :zip , class: 'form-field' %><br/>

  <%= f.label :bio, class: 'form-title' %>
  <%= f.text_area :bio , class: 'form-field' %><br/>
  <br>

  <%= f.submit class: 'submit-button' %>
<% end %>
